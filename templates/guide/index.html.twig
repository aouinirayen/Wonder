{% extends 'base.html.twig' %}

{% block title %}Gestion des Guides{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .guide-card {
            transition: transform 0.3s;
            margin-bottom: 20px;
            border-radius: 15px;
            overflow: hidden;
        }
        .guide-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        .guide-image {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            margin: 20px auto;
            border: 3px solid #fff;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }
        .guide-info {
            text-align: center;
            padding: 20px;
        }
        .guide-social {
            margin-top: 15px;
        }
        .guide-social a {
            margin: 0 5px;
            color: #666;
            transition: color 0.3s;
        }
        .guide-social a:hover {
            color: #007bff;
        }
    </style>
{% endblock %}

{% block body %}
    {# Tableau des images par défaut pour les guides #}
    {% set default_guide_images = [
        'https://images.unsplash.com/photo-1539571696357-5a69c17a67c6',
        'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d',
        'https://images.unsplash.com/photo-1494790108377-be9c29b29330',
        'https://images.unsplash.com/photo-1517841905240-472988babdf9',
        'https://images.unsplash.com/photo-1438761681033-6461ffad8d80',
        'https://images.unsplash.com/photo-1500648767791-00dcc994a43e'
    ] %}

    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 mb-0">Gestion des Guides</h1>
            <a href="{{ path('app_guide_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nouveau Guide
            </a>
        </div>

        <div class="row">
            {% for guide in guides %}
                <div class="col-md-4 col-lg-3">
                    <div class="card guide-card">
                        <div class="guide-info">
                            <img src="{{ default_guide_images[loop.index0 % default_guide_images|length] }}" 
                                 class="guide-image" 
                                 alt="{{ guide.nom }}">
                            <h5 class="mb-1">{{ guide.nom }} {{ guide.prenom }}</h5>
                            <p class="text-muted mb-2">Guide Touristique</p>
                            <div class="guide-contact mb-3">
                                <small class="d-block text-muted">
                                    <i class="fas fa-envelope"></i> {{ guide.email }}
                                </small>
                                <small class="d-block text-muted">
                                    <i class="fas fa-phone"></i> {{ guide.numTelephone }}
                                </small>
                            </div>
                            <div class="guide-social">
                                <a href="#" class="btn btn-sm btn-outline-primary">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                <a href="#" class="btn btn-sm btn-outline-info">
                                    <i class="fab fa-twitter"></i>
                                </a>
                                <a href="#" class="btn btn-sm btn-outline-danger">
                                    <i class="fab fa-instagram"></i>
                                </a>
                            </div>
                            <div class="mt-3">
                                <a href="{{ path('app_guide_show', {'id': guide.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_guide_edit', {'id': guide.id}) }}" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle fa-2x mb-3"></i>
                        <p class="mb-0">Aucun guide trouvé. Ajoutez votre premier guide !</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
