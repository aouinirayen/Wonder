{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="auth-card">
                    <div class="auth-header">
                        <h1>Connexion</h1>
                        <p class="text-muted">Connectez-vous à votre compte</p>
                    </div>

                    <form method="post" class="auth-form" action="{{ path('app_user_login') }}">
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <div class="mb-3">
                            <label for="username" class="form-label">Email</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" required autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-control" required>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" id="remember_me" name="_remember_me" class="form-check-input">
                            <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" type="submit">Se connecter</button>
                        </div>
                    </form>

                    <div class="auth-links">
                        <p>Vous n'avez pas de compte ? <a href="{{ path('app_user_signup') }}">Inscrivez-vous</a></p>
                        <a href="#">Mot de passe oublié ?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
