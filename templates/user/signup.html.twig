{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="auth-card">
                    <div class="auth-header">
                        <h1>Inscription</h1>
                        <p class="text-muted">Créez votre compte</p>
                    </div>

                    {{ form_start(form, {'attr': {'class': 'auth-form'}}) }}
                        {% if errors is defined and errors|length > 0 %}
                            <div class="alert alert-danger">
                                <ul class="mb-0">
                                    {% for error in errors %}
                                        <li>{{ error.message }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}

                        <div class="row mb-3">
                            <div class="col-md-6">
                                {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.userName, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Créer mon compte</button>
                        </div>
                    {{ form_end(form) }}

                    <div class="auth-divider">
                        <span>ou</span>
                    </div>

                    <div class="auth-links">
                        <p>Vous avez déjà un compte ? <a href="{{ path('app_user_login') }}">Connectez-vous</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
